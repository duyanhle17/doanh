function tamgiac(n) {

    if (n < 1 || n > 10) {
        console.log("Số nhập vào không hợp lệ.");
        return;
    }


    for (let i = 1; i <= n; i++) {
  
        let hang = '';
   
        for (let j = 1; j <= i; j++) {
            hang += '* ';
        }
      
        console.log(hang);
    }
}


tamgiac(7); //nhập số ở đây để vẽ tam giác
