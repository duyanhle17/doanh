#include <iostream>
using namespace std;
long long luythua(int a)
{
    long long b = 1;
    for (int i = 1; i <= a; i++)
    {
        b *= (long long)i;
    }
    return b;
}
int main()
{
    int n;
    cin >> n;
    long long a = 0;
    for (int i = 1; i <= n; i++)
    {
        a += (long long)luythua(i);
    }
    cout << a;
}
